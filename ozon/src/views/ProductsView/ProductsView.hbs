<div class="{{productsStyles.block}}">
    <div class="{{productsStyles.contentWrapper}}">
        <form id="filtration_form" class="{{filterStyles.menu}}">
            <div class="{{textStyles.bold}}">Цена</div>
            <div class="{{filterStyles.row}}">
                <label for="min_price" class="{{textStyles.big}}"> От </label> <input type="number" id="min_price" class="{{filterStyles.input}}">
            </div>
            <div class="{{filterStyles.row}}">
                <label for="max_price" class="{{textStyles.big}}"> До </label> <input type="number" id="max_price" class="{{filterStyles.input}}">
            </div>
            <div class="{{filterStyles.row}}">
                <label for="is_new" class="{{textStyles.bold}}"> Новые товары </label> <input type="checkbox" id="is_new">
            </div>
            <div class="{{filterStyles.row}}">
                <label for="is_rating" class="{{textStyles.bold}}"> Высокий рейтинг </label> <input type="checkbox" id="is_rating">
            </div>
            <div class="{{filterStyles.row}}">
                <label for="is_discount" class="{{textStyles.bold}}"> Товары со скидкой </label> <input type="checkbox" id="is_discount">
            </div>
            <button class="{{filterStyles.button}} {{buttonStyles.filterSubmit}}">
                <span class="{{filterStyles.buttonText}} {{textStyles.bigButton}}">Применить</span>
            </button>
            <button id="drop-filters" class="{{filterStyles.drop}} {{buttonStyles.filterDrop}}">
                <span class="{{filterStyles.dropText}} {{textStyles.big}}">Сбросить фильтры</span>
            </button>
        </form>
        <div class="{{productsStyles.body}}">
            <select class="{{productsStyles.select}}">
                {{#each select}}
                    <option key="{{this.key}}" direction="{{this.direction}}" {{#ifEquals this.key ../sort.key}}{{#ifEquals this.direction ../sort.direction}}selected{{/ifEquals}}{{/ifEquals}}>
                        {{this.name}}
                    </option>
                {{/each}}
            </select>
            <div class="{{productsStyles.listWrapper}}">{{{productsList}}}</div>
        </div>
    </div>
    {{#ifEquals this.isEmpty true}}
        <div class="{{productsStyles.emptyText}}">
            <span class="{{textStyles.title}}">Не найдено ни одного товара</span>
        </div>
    {{/ifEquals}}

    {{#ifEquals this.isEmpty false}}
        <div class="{{productsStyles.footer}}">
            {{{pagination}}}
        </div>
    {{/ifEquals}}
</div>
